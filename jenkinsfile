pipeline{
    agent any
    stages{
        stage("build"){
            steps{
                script{
                    if(env.BRANCH_NAME != 'master'){
                    sh "docker build -t app ."
                    sh "docker tag app echoapp:${env.BRANCH_NAME}-${env.GIT_COMMIT}"
                    sh "echo built and tagged succssesfully"
                    image="echoapp:${env.BRANCH_NAME}-${env.GIT_COMMIT}"
                    } 
                    else{
                    sh "docker build -t app ."
                    sh "docker tag app echoapp:1.0.${env.BUILD_NUMBER}"
                    sh "echo built and tagged succssesfully"
                    image="echoapp:1.0.${env.BUILD_NUMBER}"
                    }
                }
            }
        }
        stage("push"){
            steps{
                script{
                    docker.withRegistry('https://hub.docker.com/repository/docker/shmuelrdt/finaltest', 'dhub-credentials'){
                        image.push()
                    }
                }
            }
    }
}
}