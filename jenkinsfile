pipeline{
    agent any
    environment { 
        registry = "shmuelrdt/finaltest" 
        registryCredential = 'dhub-credentials' 
        dockerImage = '' 
    }
    stages{
        stage("build"){
            steps{
                script{
                    if(env.BRANCH_NAME != 'master'){
                    sh "docker build -t app ."
                    sh "docker tag app echoapp:${env.BRANCH_NAME}-${env.GIT_COMMIT}"
                    sh "echo built and tagged succssesfully"
                    image = docker.build registry + "echoapp:${env.BRANCH_NAME}-${env.GIT_COMMIT}"
                    } 
                    else{
                    sh "docker build -t app ."
                    sh "docker tag app echoapp:1.0.${env.BUILD_NUMBER}"
                    sh "echo built and tagged succssesfully"
                    image = docker.build registry + "echoapp:1.0.${env.BUILD_NUMBER}"
                    }
                }
            }
        }
        stage("push"){
            steps{
                script{
                    docker.withRegistry('https://registry.hub.docker.com/repository/docker/shmuelrdt/finaltest', 'dhub-credentials'){
                        image.push()
                    }
                }
            }
    }
}
}